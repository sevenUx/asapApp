<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1Color">
    <include
        layout="@layout/top_tab_menu"
        android:id="@+id/top_tab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        layout="@layout/item_sort"
        android:id="@+id/item_sort"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <RelativeLayout
        android:id="@+id/item_list_block3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg3Color"
        android:paddingTop="16dp"
        android:elevation="2dp">
        <include
            layout="@layout/item_list2"
            android:id="@+id/item_list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>