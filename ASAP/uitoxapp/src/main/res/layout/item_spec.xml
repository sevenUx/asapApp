<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg3Color">

    <LinearLayout
        android:id="@+id/item_spec_close"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical|right">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tag_icon_close"
            android:src="@mipmap/ic_close_24dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_spec_block1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="0dp"
        android:paddingRight="16dp"
        android:paddingBottom="0dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/itemImg"
            android:src="@drawable/w360h360"
            android:layout_marginRight="8dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="false"
            android:layout_toRightOf="@+id/itemImg"
            android:layout_toEndOf="@+id/itemImg"
            android:layout_alignBottom="@+id/itemImg"
            android:layout_alignTop="@+id/itemImg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAppearance="@style/ut_body2"
                android:textColor="@color/secondaryColor"
                android:text="商品名稱"
                android:id="@+id/itemSpecName"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:lineSpacingExtra="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/ut_body2"
                android:text="$8,888"
                android:id="@+id/itemSpecPrice"
                android:textColor="@color/primaryColor"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <!-- 要加刪除線 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/ut_caption"
                android:text="$9,999"
                android:id="@+id/itemSpecPrice2"
                android:textColor="@color/thirdColor"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/itemSpecPrice"
                android:layout_toEndOf="@+id/itemSpecPrice"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="8dp"/>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_spec_block2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="24dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/item_specTitle1"
            android:text="說明"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ut_body1"
            android:textColor="@color/thirdColor"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:id="@+id/item_specContent1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="green"
                android:textAppearance="@style/ut_body1"
                android:textColor="@color/secondaryColor"
                android:lineSpacingExtra="2dp"
                android:layout_marginRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="green"
                android:textAppearance="@style/ut_body1"
                android:textColor="@color/primaryColor"
                android:lineSpacingExtra="2dp"
                android:layout_marginRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="green"
                android:textAppearance="@style/ut_body1"
                android:textColor="@color/secondaryColor"
                android:lineSpacingExtra="2dp"
                android:layout_marginRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/border_bottom_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/item_spec_block3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="24dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/item_specTitle2"
            android:text="尺寸"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ut_body1"
            android:textColor="@color/thirdColor"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:id="@+id/item_specContent2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textAppearance="@style/ut_body1"
                android:textColor="@color/secondaryColor"
                android:lineSpacingExtra="2dp"
                android:layout_marginRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:textAppearance="@style/ut_body1"
                android:textColor="@color/primaryColor"
                android:lineSpacingExtra="2dp"
                android:layout_marginRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L"
                android:textAppearance="@style/ut_body1"
                android:textColor="@color/secondaryColor"
                android:lineSpacingExtra="2dp"
                android:layout_marginRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/border_bottom_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/item_spec_block4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="24dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/item_specTitle2"
            android:text="包含內容"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ut_body1"
            android:textColor="@color/thirdColor"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/item_specContent3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            <TextView
                android:text="包含商品名稱"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/ut_body2"
                android:textColor="@color/secondaryColor"
                android:layout_marginRight="16dp"
                android:lineSpacingExtra="1dp"
                android:layout_weight="1" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:minWidth="220dp"
                android:gravity="right">
                <TextView
                    android:id="@+id/item_check_spinner_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/ut_body1"
                    android:text="請選擇規格"
                    android:textColor="@color/thirdColor"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tag_icon_cart"
                    android:src="@mipmap/ic_arrow_drop_down_24dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/item_check_spinner_content"
                    android:layout_toEndOf="@+id/item_check_spinner_content"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/border_bottom_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/item_spec_block5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="24dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/item_specTitle4"
            android:text="贈品"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ut_body1"
            android:textColor="@color/thirdColor"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:id="@+id/item_specContent4"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贈品名稱"
                android:textAppearance="@style/ut_body1"
                android:textColor="@color/secondaryColor"
                android:lineSpacingExtra="2dp"
                android:layout_marginRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贈品名稱"
                android:textAppearance="@style/ut_body1"
                android:textColor="@color/secondaryColor"
                android:lineSpacingExtra="2dp"
                android:layout_marginRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/border_bottom_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/item_float_buy"
        android:id="@+id/item_float_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
